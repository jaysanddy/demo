<!DOCTYPE html>
<html lang="en" xmlns:th="http://www.thymeleaf.org">

	<head>
		<meta charset="UTF-8" />
		<meta name="renderer" content="webkit" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0,user-scalable=0,uc-fitscreen=yes" />
		<meta name="apple-mobile-web-app-capable" content="yes" />
		<meta name="apple-mobile-web-app-status-bar-style" content="black" />
		<meta name="format-detection" content="telephone=no" />
		<title>管理员</title>
		<meta name="keywords" content="" />
		<meta name="description" content="" />
        <link rel="stylesheet" type="text/css" href="../css/miniMobile.css"/>
        <script type="text/javascript" src="../js/zepto.min.js"></script>
        <script type="text/javascript" src="../js/miniMobile.js"></script>
        <link rel="stylesheet" type="text/css" href="../plugins/fonticon/iconfont.css" />
        <link rel="stylesheet" type="text/css" href="../css/style.css" />
        <link rel="stylesheet" href="../css/swiper.css">
        <script src="../js/swiper.min.js"></script>
        <link rel="stylesheet" type="text/css" href="../js/dropload.css" />
        <script type="text/javascript" src="../js/dropload.js"></script>
	</head>
<body class="fadeIn animated">
    <div class="load">
      <img src="../img/timg.gif">
    </div>
    <div class="tabBox">
        <section class="swiper-container">
            <nav class="bottomNav clearfix">
                <div class="w3 active">
                    <a>
                        <i class="icon-home"></i>
                        <p>问题复查</p>
                    </a>
                </div>
                <div class="w3">
                    <a class="right">
                        <i class="icon-trouble"></i>
                        <p>问题处理</p>
                    </a>
                </div>
                <div class="w3">
                    <a class="right">
                        <i class="icon-other"></i>
                        <p>问题记录</p>
                    </a>
                </div>
            </nav>
            <div class="swiper-wrapper">
                <div class="swiper-slide">
                    <header>
                        <div class="bcl">
                            <div class="scl">
                                <div class="head-img">
                                    <img src="../img/user.jpg">
                                </div>
                            </div>
                        </div>
                        <div class="setting" onclick="javascript:window.location.href='../page/problemLog'">
                            <img src="../img/setting.png" alt="">
                        </div>
                    </header>
                    <ul class="list-3">
                        <li>
                            <h3 id="ing">10</h3>
                            <p>进行中</p>
                        </li>
                        <li>
                            <h3 id="through">10</h3>
                            <p>待复查</p>
                        </li>
                        <li>
                            <h3 id="finish">10</h3>
                            <p>已完成</p>
                        </li>
                    </ul>
                    <section class="clearfix padd-btm">
                        <div class="title-p">
                            <p><span></span><em></em><b>问题复查</b><em></em><span></span></p>
                        </div>
                        <div class="item-box" id="list">

                        </div>
                    </section>
                </div>
                <div class="swiper-slide">
                    <div class="pad-top">
                        <div class="top">
                            问题记录
                        </div>
                        <section class="clearfix padd-btm">
                            <div class="item-box" id="list1">

                            </div>
                        </section>
                    </div>
                </div>
                <div class="swiper-slide">
                    <div class="content pad-top">
                        <div class="top">
                            问题列表
                        </div>
                        <section class="clearfix">
                            <div class="item-box" id="list2">

                            </div>
                        </section>
                    </div>
                </div>
            </div>
        </section>
    </div>
</body>
<input type="hidden" id="userId" th:value="${userId}">
<script>
    var swiper = new Swiper('.swiper-container', {
        on: {
            slideChangeTransitionStart: function() {
                $(".bottomNav>div").removeClass("active").eq(this.activeIndex).addClass("active");
            }
        }
    });
    $(".bottomNav>div").click(function() {
        var index = $(this).index();
        $(".bottomNav>div").removeClass("active").eq(index).addClass("active");
        swiper.slideTo(index, 300, false);
    })
</script>
<script type="text/javascript">
getHead();
function getHead(){
    var creatorId=$("#userId").val();
    $.post("/inspectionRecord/getRecordCount",
        {
            creatorId:creatorId
        },
        function(data){
            var data=data.data;
            console.log(data);
            $("#finish").text(data.finish);
            $("#ing").text(data.ing);
            $("#through").text(data.through);
        });
}
getList();
var page=1;
function getList(){
    var userId=$("#userId").val();
    $.post("/inspectionRecord/getRecord",
        {
            states:"3",
            userId:userId,
            page:page,
            rows:50
        },
        function(data){
            var code='';
            data=data.data;
            console.log(data);
            for(var i=0;i<data.length;i++){
                code+='<a href="../page/problemRecheckDetail?recordId='+data[i].id+'&resultId='+data[i].id+'">';
                code+='<div class="item-left">';
                code+='<h4 class="nowrap">'+data[i].title+'</h4>';
                code+='<p class="nowrap">'+data[i].towns+'</p>';
                var time=data[i].createTime;
                var d = new Date(time);
                var times=d.getFullYear() + '-' + (d.getMonth() + 1) + '-' + d.getDate();
                code+='<p>'+times+'</p>';
                code+='</div>';
                code+='<div class="item-right">';
                if(data[i].status=="0"){
                    code+='<div class="state1"></div>';
                }else if(data[i].status=="1"){
                    code+='<div class="state2"></div>';
                }else if(data[i].status=="2"){
                    code+='<div class="state3"></div>';
                }else if(data[i].status=="3"){
                    code+='<div class="state33"></div>';
                }else if(data[i].status=="5"){
                    code+='<div class="state4"></div>';
                }
                code+='</div>';
                code+='</a>';
            }
            $("#list").html(code);
        });
}
getList1();
function getList1(){
    var userId=$("#userId").val();
    $.post("/inspectionRecord/getRecord",
        {
            states:"0",
            userId:userId,
            page:page,
            rows:50
        },
        function(data){
            var code='';
            data=data.data;
            for(var i=0;i<data.length;i++){
                code+='<a href="../page/problemDetail?recordId='+data[i].id+'">';
                code+='<div class="item-left">';
                code+='<h4 class="nowrap">'+data[i].title+'</h4>';
                code+='<p class="nowrap">'+data[i].towns+'</p>';
                var time=data[i].createTime;
                var d = new Date(time);
                var times=d.getFullYear() + '-' + (d.getMonth() + 1) + '-' + d.getDate();
                code+='<p>'+times+'</p>';
                code+='</div>';
                code+='<div class="item-right">';
                if(data[i].status=="0"){
                    code+='<div class="state1"></div>';
                }else if(data[i].status=="1"){
                    code+='<div class="state2"></div>';
                }else if(data[i].status=="2"){
                    code+='<div class="state3"></div>';
                }else if(data[i].status=="3"){
                    code+='<div class="state33"></div>';
                }else if(data[i].status=="5"){
                    code+='<div class="state4"></div>';
                }
                code+='</div>';
                code+='</a>';
            }
            $("#list1").html(code);
        });
}
$(function(){
    // 页数
    var userId=$("#userId").val();
    var page = 0;
    var rows = 5;
    $('.content').dropload({
        scrollArea : window,
        loadDownFn : function(me){
            page++;
            var code = '';
            $.ajax({
                type: 'post',
                url: '/inspectionRecord/getRecord',
                data:{
                    states:"0,1,2,3,5",
                    creatorId:userId,
                    page:page,
                    rows:rows
                },
                dataType: 'json',
                success: function(data){
                    data=data.data;
                    var arrLen = data.length;
                    if(arrLen > 0){
                        for(var i=0; i<arrLen; i++){
                            code+='<a href="../page/recordDetail?recordId='+data[i].id+'">';
                            code+='<div class="item-left">';
                            code+='<h4 class="nowrap">'+data[i].title+'</h4>';
                            code+='<p class="nowrap">'+data[i].towns+'</p>';
                            var time=data[i].createTime;
                            var d = new Date(time);
                            var times=d.getFullYear() + '-' + (d.getMonth() + 1) + '-' + d.getDate();
                            code+='<p>'+times+'</p>';
                            code+='</div>';
                            code+='<div class="item-right">';
                            if(data[i].status=="0"){
                                code+='<div class="state1"></div>';
                            }else if(data[i].status=="1"){
                                code+='<div class="state2"></div>';
                            }else if(data[i].status=="2"){
                                code+='<div class="state3"></div>';
                            }else if(data[i].status=="3"){
                                code+='<div class="state33"></div>';
                            }else if(data[i].status=="5"){
                                code+='<div class="state4"></div>';
                            }
                            code+='</div>';
                            code+='</a>';
                        }
                    }else{
                        me.lock();
                        me.noData();
                    }
                    setTimeout(function(){
                        $('#list2').append(code);
                        me.resetload();
                    },1000);
                },
                error: function(xhr, type){
                    alert('出错了!');
                    me.resetload();
                }
            });
        }
    });
});
</script>
</html>