<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">


    <title>志愿者列表</title>
    <meta name="keywords" content="用户列表"/>
    <meta name="description" content="用户列表"/>

    <link rel="shortcut icon" href="favicon.ico">
    <link href="/../css/bootstrap.min14ed.css?v=3.3.6" rel="stylesheet">
    <link href="/../css/font-awesome.min93e3.css?v=4.4.0" rel="stylesheet">

    <!-- jqgrid-->
    <link href="/../css/plugins/jqgrid/ui.jqgridffe4.css?0820" rel="stylesheet">

    <link href="/../css/animate.min.css" rel="stylesheet">
    <link href="/../css/style.min862f.css?v=4.1.0" rel="stylesheet">

    <style>
        /* Additional style to fix warning dialog position */

        #alertmod_table_list_2 {
            top: 900px !important;
        }
    </style>
</head>

<body class="gray-bg">
<div class="wrapper wrapper-content  animated fadeInRight">
    <div class="row">
        <div class="col-sm-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>河流列表</h5>
                </div>
                <div class="ibox-content">
                    <button type="button" class="btn btn-w-s btn-success" style="margin:10px 0px 20px 5px" onclick="window.location.href='../page/addUser'">添加河流</button>
                    <div class="jqGrid_wrapper">
                        <table id="table_list_1"></table>
                        <div id="pager_list_1"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/../js/jquery.min.js?v=2.1.4"></script>
<script src="/../js/bootstrap.min.js?v=3.3.6"></script>
<script src="/../js/plugins/peity/jquery.peity.min.js"></script>
<script src="/../js/plugins/jqgrid/i18n/grid.locale-cnffe4.js?0820"></script>
<script src="/../js/plugins/jqgrid/jquery.jqGrid.minffe4.js?0820"></script>
<script src="/../js/content.min.js?v=1.0.0"></script>
<script src="../js/plugins/sweetalert/sweetalert.min.js"></script>
<script src="../js/util/dateutil.js"></script>
<link href="../css/plugins/sweetalert/sweetalert.css" rel="stylesheet">

<script>
    $(document).ready(function(){
        $.jgrid.defaults.styleUI="Bootstrap";
        var url = "../river/getRivers";
        $("#table_list_1").jqGrid(
            {
                url:url,
                mtype: 'POST',
                datatype:"JSON",
                height:500,
                autowidth:true,
                shrinkToFit:true,
                rowNum:15,
                rowList:[15,30],
                jsonReader: {
                    root:"data", page:"page","total":"totalPages",records:"totalCount", repeatitems:false
                },
                colNames:["id","河流姓名","河流级别","河流长度","河流起点","河流结束点","流域面积","行政区域","创建时间","河流编号","所属地区","操作"],
                colModel:[
                    {name:"id",index:"id",width:20,sorttype:"int",hidden:true},
                    {name:"riverName",index:"riverName",width:40},
                    {name:"riverLevel",index:"riverLevel",width:100,
                        formatter: function (cellvalue, options, rowObject){
                            var level = '';
                            if(rowObject.riverLevel != ''){
                                var array = rowObject.riverLevel;
                                for(var i=0;i<array.length;i++){
                                    console.log(array[i]);
                                    if(i>0){
                                        level+="-";
                                    }
                                    level+=array[i].name;
                                }
                            }
                            return level;
                        }},
                    {name:"lengths",index:"lengths",width:50,
                        formatter: function (cellvalue, options, rowObject) {
                        return cellvalue+"公里";
                    }},
                    {name:"beginArea",index:"beginArea",width:50},
                    {name:"endArea",index:"endArea",width:50},
                    {name:"basinArea",index:"basinArea",width:50},
                    {name:"areas",index:"areas",width:50},
                    {name:"createTime",index:"createTime",width:60,
                        formatter: function (cellvalue, options, rowObject) {
                            return getFormatDateByLong(rowObject.createTime,'yyyy-MM-dd')
                        }
                    },
                    {name:"riverNo",index:"riverNo",width:50},
                    {name:"areaName",index:"areaName",width:50},
                    {
                        label: '启用', name: 'flag', index: 'flag', width: 45, align: 'center',
                        formatter: function (cellvalue, options, rowObject) {
                            return "<a style='margin-left: 10px'  onclick='onClickEditVol("+rowObject.id+")'>编辑</a>";
                        }
                    }
                ],
                pager:"#pager_list_1",
                viewrecords:true,
//                caption:"jqGrid 示例1",
                hidegrid:false
            });
        $(window).bind("resize",function(){
            var width=$(".jqGrid_wrapper").width();
            $("#table_list_1").setGridWidth(width);
            $("#table_list_2").setGridWidth(width)
        })
    });

    function onClickEditVol(id) {
//        window.open("../page/volUserEdit?volId="+id);
        window.location.href="../page/editUser?userId="+id;
    };


    function onClickUserRiver(id) {
//        window.open("../page/volUserRiverManager?volId="+id);
        window.location.href="../page/volUserRiverManager?volId="+id;
    };

</script>
</body>


