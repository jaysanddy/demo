<!DOCTYPE html>
<html lang="en" xmlns:th="http://www.thymeleaf.org">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>用户添加</title>
    <meta name="keywords" content="用户添加">
    <meta name="description" content="用户添加">

    <link rel="shortcut icon" href="favicon.ico"> <link href="../css/bootstrap.min14ed.css?v=3.3.6" rel="stylesheet">
    <link href="../css/font-awesome.min93e3.css?v=4.4.0" rel="stylesheet">
    <link href="../css/animate.min.css" rel="stylesheet">
    <link href="../css/style.min862f.css?v=4.1.0" rel="stylesheet">

</head>

<body class="gray-bg">
<input id="userId" th:value="${user.id}">
<input id="areaId" th:value="${user.areaId}">
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-sm-6" style="width: 100%">
            <div class="ibox float-e-margins" style="width: 100%">
                <div class="ibox-title">
                    <h5>用户添加</h5>
                </div>
                <div class="ibox-content">
                    <form class="form-horizontal m-t" id="signupForm">
                        <div class="form-group">
                            <label class="col-sm-3 control-label">姓名：</label>
                            <div class="col-sm-8">
                                <input id="name" name="name" class="form-control " type="text" th:value="${user.name}">
                                <!--<span class="help-block m-b-none"><i class="fa fa-info-circle"></i> 这里写点提示的内容</span>-->
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">真实姓名：</label>
                            <div class="col-sm-8">
                                <input id="realname" name="realname" class="form-control " type="text" th:value="${user.realname}">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">密码：</label>
                            <div class="col-sm-8">
                                <input id="password" name="password" class="form-control valid" type="password" >
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">地区：</label>
                            <div class="col-sm-8">
                                <!--<input id="username" name="username" class="form-control valid" type="text" aria-required="true" aria-invalid="false" >-->
                                <select id="area"  class="form-control" name="area">
                                    <option>请选择</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">权限：</label>
                            <div class="col-sm-8">
                                <!--<input id="username" name="username" class="form-control valid" type="text" aria-required="true" aria-invalid="false" >-->
                                <select id="roleId"  class="form-control" name="roleId"  >
                                    <option>请选择</option>
                                    <option th:selected="${user.roleId == 2}" value="2">普通管理员</option>
                                    <option th:selected="${user.roleId == 3}" value="3">巡检员</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-8 col-sm-offset-3">
                                <button class="btn btn-public" onclick="javascript:history.go(-1);">返回</button>
                                <button class="btn btn-primary" onclick="addUser()" >提交</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="../js/jquery.min.js"></script>
<script src="../js/plugins/layer/layer.min.js" type="text/javascript"></script>
<script src="../js/bootstrap.min.js?v=3.3.6"></script>
<script src="../js/content.min.js?v=1.0.0"></script>
<script src="../js/plugins/validate/jquery.validate.min.js"></script>
<script src="../js/plugins/validate/messages_zh.min.js"></script>
<script src="../js/demo/form-validate-demo.min.js"></script>
<script src="../js/plugins/sweetalert/sweetalert.min.js"></script>
<link href="../css/plugins/sweetalert/sweetalert.css" rel="stylesheet">

<script type="text/javascript">
    getArea();
    function getArea() {
        var areaId = $("#areaId").val();
        $.ajax({
            type: "post",
            async: false,
            url: '../area/getArea',
            dataType: "json",
            error: function (XMLHttpRequest, textStatus, errorThrown) {
                console.log(XMLHttpRequest.status + "1");
                console.log(XMLHttpRequest.readyState);
                console.log(textStatus);
            },
            success: function (data) {
                var code = " <option id=''>请选择</option>";
                for(var i=0;i<data.length;i++){
                    if(areaId == ''){
                        code += " <option value='"+data[i].id+"'>"+data[i].name+"</option>";
                    }else{
                        console.log(areaId);
                        if(areaId == data[i].id){
                            code += " <option selected = 'selected' value='"+data[i].id+"'>"+data[i].name+"</option>";
                        }
                    }
                }
                $("#area").html(code);
            }
        });
    }

    function addUser() {
        event.preventDefault();
        var name = $("#name").val().trim();
        var realName = $("#realname").val().trim();
        var areaId = $("#area").val().trim();
        var password = $("#password").val().trim();
        var roleId = $("#roleId").val().trim();
        if(name == ''){
            swal({title:"danger",text:"名字不能为空",type:"error"},
                function () {
                    return ;
                })
        }

        if(realname == ''){
            swal({title:"danger",text:"真实姓名不能为空",type:"error"},
                function () {
                    swal.close();
                    return ;
                })
        }

        if(areaId == ''){
            swal({title:"danger",text:"地区不能为空",type:"error"},
                function () {
                    swal.close();
                    return ;
                })
        }

        if(password == ''){
            swal({title:"danger",text:"密码不能为空",type:"error"},
                function () {
                    swal.close();
                    return ;
                })
        }

        if(roleId == ''){
            swal({title:"出错了！",text:"权限不能为空",type:"error"},
                function () {
                    swal.close();
                    return ;
                })
        }
        $.ajax({
            type: "post",
            async: false,
            url: '../user/createUser',
            dataType: "json",
            data:{
                "name":name,
                "realName":realName,
                "password":password,
                "areaId":areaId
            },
            error: function (XMLHttpRequest, textStatus, errorThrown) {
                console.log(XMLHttpRequest.status + "1");
                console.log(XMLHttpRequest.readyState);
                console.log(textStatus);
            },
            success: function (data) {
                console.log(data);
                if(data.code==200){
                    swal({title:"success",text:"添加成功",type:"success"},function () {
                        window.history.back();
                    });
                }else{
                    swal({title:"Error",text:"添加失败",type:"error"},function () {
                        window.location.reload();
                    });
                }
            }
        });
        return false;
    }
</script>
</body>


